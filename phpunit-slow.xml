
<phpunit backupGlobals="true"
         backupStaticAttributes="false"
         bootstrap="./tests/bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         forceCoversAnnotation="false"
         mapTestClassNameToCoveredClassName="false"
         processIsolation="false"
         stopOnError="false"
         stopOnFailure="false"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         syntaxCheck="true"
         testSuiteLoaderClass="PHPUnit_Runner_StandardTestSuiteLoader"
         strict="true"
         verbose="true">
    <testsuites>
        <testsuite name="PdoExtend">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html" target="./build/coverage/report" charset="UTF-8"
       yui="true" highlight="true"
       lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="./build/coverage/coverage.xml"/>
        <log type="json" target="./build/logs/output/logfile.json"/>
        <log type="tap" target="./build/logs/output/logfile.tap"/>
        <log type="junit" target="./build/xunit.xml" logIncompleteSkipped="false"/>
        <log type="testdox-html" target="./build/logs/output/testdox.html"/>
        <log type="testdox-text" target="./build/logs/output/testdox.txt"/>
    </logging>
    <filter>
        <whitelist>
            <directory suffix=".php">./src</directory>
            <exclude>
                <directory suffix=".php">./tests</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>